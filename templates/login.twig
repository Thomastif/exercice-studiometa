{% extends "./base.twig" %}

{% block content %}
    <section class="xl:grid login h-screen overflow-hidden">
      <div class="flex justify-center items-center flex-col h-screen relative z-10 px-2 sm:px-6 md:px-12">
        <form class="login-form w-full md:w-fit p-12 md:p-20 bg-white rounded-3xl xl:p-0 xl:h-auto xl:w-auto xl:rounded-none" id="login-form" onsubmit="return false;">
          <h2 class="font-semibold text-xl md:text-2xl pb-10 md:pb-12">Sign in to your account</h2>  
          <label for="user" class="block pb-2">Username</label>
          <input type="text" id="user" name="user" autocomplete="username" required class="border rounded-md border-black border-opacity-20 w-full md:w-96 p-1.5">
          
          <label for="password" class="block pt-8 pb-2">Password</label>
          <input type="password" id="password" name="password" autocomplete="current-password" required class="border rounded-md border-black border-opacity-20 w-full md:w-96 p-1.5">
          <div class="flex justify-between py-8">
            <div>
              <input type="checkbox" id="remember" name="remember">
              <label for="remember" class="font-light">Remember me</label>
            </div>
            <a href="#" class="font-semibold text-[#4F46E5] hover:underline underline-offset-2">Forgot password?</a>
          </div>
          
          <button type="submit" class="border rounded-md bg-[#4F46E5] w-full md:w-96 p-3 text-center text-white hover:scale-95" onclick="submitForm()">Sign in</button>
          <div id="message-container">
            {% if message %}
              <p class="{{ message == 'Identifiants incorrects' ? 'text-red-700' : 'text-green-600' }} pt-6">{{ message }}</p>
            {% endif %}
          </div>
        </form>

      </div>
      <img src="./src/img/desk.png" alt="" class="absolute xl:static top-0 left-0 w-full h-full object-cover">
    </section>
{% endblock %}